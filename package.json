{
  "name": "aide",
  "version": "1.0.0",
  "description": "A mobile-first, AI-driven IDE with seamless Git integration, enhanced productivity, and a live preview experience, all running in the browser.",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "preinstall": "node scripts/create-native-plugins.js",
    "postinstall": "patch-package",
    "lint": "tsc --noEmit",
    "build:web": "vite build",
    "configure:project": "node scripts/configure-native-project.js",
    "sync:native": "npx capacitor sync && npm run configure:project",
    "open:android": "npx capacitor open android",
    "open:ios": "npx capacitor open ios",
    "start:electron": "electron .",
    "build:desktop": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:macos": "electron-builder --mac",
    "build:docker": "docker build -t aide:latest -f Dockerfile.json"
  },
  "dependencies": {
    "@aide/browser": "file:native-plugins/aide-browser",
    "@capacitor/android": "^7.0.0",
    "@capacitor/camera": "*",
    "@capacitor/core": "^7.0.0",
    "@capacitor/geolocation": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@google/genai": "^1.24.0",
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@monaco-editor/react": "^4.7.0",
    "buffer": "^6.0.3",
    "dexie": "^4.0.8",
    "esbuild-wasm": "0.25.11",
    "html2canvas": "^1.4.1",
    "isomorphic-git": "^1.34.0",
    "monaco-editor": "^0.54.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "memfs": "^4.49.0",
    "patch-package": "^8.0.0",
    "typescript": "^5.5.4",
    "vite": "^7.1.9"
  },
  "build": {
    "appId": "com.aide.app",
    "productName": "AIDE",
    "files": [
      "www/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
