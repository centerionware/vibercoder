{
  "name": "vibecode",
  "version": "1.0.0",
  "description": "A mobile-first, web-based coding platform with seamless Git integration, AI-enhanced productivity, and a live preview experience, all running in the browser.",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "build:web": "esbuild index.tsx --bundle --outfile=www/main.js --loader:.tsx=tsx --jsx=transform --jsx-factory=React.createElement --jsx-fragment=React.Fragment --define:process.env.API_KEY=\\\"\\\" && esbuild services/git.worker.ts --bundle --outfile=www/git.worker.js --loader:.ts=ts --format=esm --define:process.env.API_KEY=\\\"\\\"",
    "configure:native": "node scripts/configure-native-permissions.js",
    "sync:native": "npx capacitor sync",
    "open:android": "npx capacitor open android",
    "open:ios": "npx capacitor open ios",
    "start:electron": "electron .",
    "build:desktop": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:macos": "electron-builder --mac",
    "build:docker": "docker build -t vibecode:latest -f Dockerfile.json ."
  },
  "dependencies": {
    "@capacitor/android": "^6.1.1",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/core": "^6.1.1",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/ios": "^6.1.1",
    "isomorphic-git": "^1.34.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  },
  "build": {
    "appId": "com.vibecode.app",
    "productName": "VibeCode",
    "files": [
      "www/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
