{
  "name": "vibecode",
  "version": "1.0.0",
  "description": "A mobile-first, web-based coding platform with seamless Git integration, AI-enhanced productivity, and a live preview experience, all running in the browser.",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "build:web": "vite build",
    "configure:native": "node scripts/configure-native-permissions.js",
    "sync:native": "npx capacitor sync",
    "open:android": "npx capacitor open android",
    "open:ios": "npx capacitor open ios",
    "start:electron": "electron .",
    "build:desktop": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:macos": "electron-builder --mac",
    "build:docker": "docker build -t vibecode:latest -f Dockerfile.json ."
  },
  "dependencies": {
    "@capacitor/android": "^6.1.1",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/core": "^6.1.1",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/ios": "^6.1.1",
    "@google/genai": "^1.24.0",
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@monaco-editor/react": "^4.6.0",
    "buffer": "^6.0.3",
    "dexie": "^4.0.8",
    "esbuild-wasm": "^0.23.0",
    "html2canvas": "^1.4.1",
    "isomorphic-git": "^1.34.0",
    "monaco-editor": "^0.50.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "memfs": "^4.49.0",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  },
  "build": {
    "appId": "com.vibecode.app",
    "productName": "VibeCode",
    "files": [
      "www/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}