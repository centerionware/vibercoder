{
  "name": "vibecode",
  "version": "1.0.0",
  "description": "A mobile-first, web-based coding platform with seamless Git integration, AI-enhanced productivity, and a live preview experience, all running in the browser.",
  "main": "electron/main.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "build:web": "rm -rf www && mkdir www && esbuild index.tsx --bundle --outfile=www/main.js --define:process.env.API_KEY=\\\"\"$API_KEY\"\\\" --jsx-factory=React.createElement --jsx-fragment=React.Fragment && cp index.html www/index.html && node -e \"require('fs').writeFileSync('www/index.html', require('fs').readFileSync('www/index.html', 'utf8').replace('<script type=\\\"module\\\" src=\\\"/index.tsx\\\"></script>', '<script src=\\\"main.js\\\"></script>'))\"",
    "configure:native": "node scripts/configure-native-permissions.js",
    "sync:native": "npx capacitor sync",
    "open:android": "npx capacitor open android",
    "open:ios": "npx capacitor open ios",
    "start:electron": "npm run build:web && electron .",
    "build:desktop": "npm run build:web && electron-builder --publish never",
    "build:win": "npm run build:web && electron-builder --win --publish never",
    "build:linux": "npm run build:web && electron-builder --linux --publish never",
    "build:macos": "npm run build:web && electron-builder --mac --publish never",
    "build:docker": "docker build -t vibecode:latest ."
  },
  "dependencies": {
    "@capacitor/camera": "^6.0.0",
    "@capacitor/core": "^6.1.1",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@google/genai": "^1.24.0",
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@monaco-editor/react": "^4.6.0",
    "buffer": "^6.0.3",
    "dexie": "^4.0.8",
    "esbuild-wasm": "0.23.0",
    "html2canvas": "^1.4.1",
    "isomorphic-git": "^1.34.0",
    "monaco-editor": "^0.50.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.1",
    "@capacitor/cli": "^6.1.1",
    "@capacitor/ios": "^6.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  },
  "author": "VibeCode",
  "license": "MIT",
  "build": {
    "appId": "com.vibecode.app",
    "productName": "VibeCode",
    "files": [
      "www/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}